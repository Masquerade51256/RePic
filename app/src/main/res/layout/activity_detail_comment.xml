<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal"
  android:orientation="horizontal"
  android:padding="@dimen/element_padding">

  <RelativeLayout
    android:id="@+id/relativeLayout_inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <com.rpgroup.repic.view.views.CircleImageView
    android:id="@+id/imgView_portrait_comment"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/profile_pic1"
    />
  <TextView
    android:id="@+id/tv_userName_comment"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/imgView_portrait_comment"
    android:layout_alignParentRight="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="刘岳涵"
    android:textStyle="bold"
    android:textColor="#515151"
    android:textSize="16dp"/>
  <TextView
    android:id="@+id/tv_comment"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_userName_comment"
    android:layout_toRightOf="@+id/imgView_portrait_comment"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:text="好美啊！好美啊！好美啊!这是一条评论"
    android:textSize="18dp"
    android:textColor="#515151"/>
  </RelativeLayout>

  <View
    android:id="@+id/horizontal_line"
    android:layout_width="match_parent"
    android:layout_below="@+id/relativeLayout_inner"
    android:layout_marginTop="10dp"
    android:layout_height="1dp"
    android:background="#707070"/>
</RelativeLayout>
