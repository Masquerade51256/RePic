<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal"
  android:orientation="horizontal"
  android:padding="@dimen/element_padding">

  <com.example.apple.lookthrough.view.views.CircleImageView
    android:id="@+id/imgView_portrait"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/profile_pic1"
    />

  <TextView
    android:id="@+id/tv_userName"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/imgView_portrait"
    android:layout_alignParentRight="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:shadowColor="#515151"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="0.01"
    android:text="LyXuAn"
    android:textColor="#515151"
    android:textSize="30dp"/>
  <TextView
    android:id="@+id/tv_publishTime"
    android:layout_width="248dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_userName"
    android:layout_toRightOf="@+id/imgView_portrait"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:text="2018-11-20 12:34"
    android:textSize="24dp"/>

  <ImageView
    android:id="@+id/imgView_pic"
    android:layout_width="match_parent"
    android:layout_height="239dp"
    android:layout_marginTop="116dp"
    android:foregroundGravity="center"
    android:layout_alignParentTop="true"
    android:src="@drawable/pic"/>

  <ImageButton
    android:id="@+id/btn_favorite"
    android:layout_width="130dp"
    android:layout_height="35dp"
    android:layout_below="@+id/imgView_pic"
    android:src="@drawable/ic_favorite"
    android:background="#ffffff"/>
  <ImageButton
    android:id="@+id/btn_comment"
    android:layout_width="130dp"
    android:layout_height="35dp"
    android:layout_below="@+id/imgView_pic"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:src="@drawable/ic_comment"/>
  <ImageButton
    android:id="@+id/btn_share"
    android:layout_width="130dp"
    android:layout_height="35dp"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/imgView_pic"
    android:background="#ffffff"
    android:src="@drawable/ic_share"/>
  <View
    android:id="@+id/horizontal_line"
    android:layout_width="match_parent"
    android:layout_below="@+id/btn_share"
    android:layout_height="1dp"
    android:background="#707070"/>
  <TextView
    android:id="@+id/tv_commentUserNameOne"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/horizontal_line"
    android:text="刘岳涵:"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="#515151"/>
  <TextView
    android:id="@+id/tv_commentContentOne"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_favorite"
    android:layout_toRightOf="@+id/tv_commentUserNameOne"
    android:text="又堵车了，还好景色还不错嘻嘻嘻嘻嘻嘻嘻。"
    android:textColor="#515151"
    android:textSize="20dp"/>

  <TextView
    android:id="@+id/tv_commentUserNameTwo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_commentContentOne"
    android:text="刘岳涵:"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="#515151"
    android:layout_marginTop="4dp"/>
  <TextView
    android:id="@+id/tv_commentContentTwo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_commentContentOne"
    android:layout_toRightOf="@+id/tv_commentUserNameTwo"
    android:text="又堵车了，还好景色还不错嘻嘻嘻嘻嘻嘻嘻。"
    android:textColor="#515151"
    android:textSize="20dp"
    android:layout_marginTop="4dp"/>
  <TextView
    android:id="@+id/tv_viewComment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_commentContentTwo"
    android:text="View all comments->"
    android:textStyle="italic"
    android:textSize="18dp"
    android:textColor="#707070"/>
  <View
    android:id="@+id/part_line"
    android:layout_width="match_parent"
    android:layout_below="@+id/tv_viewComment"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="#707070"/>
</RelativeLayout>